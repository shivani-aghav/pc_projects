package string_concepts.mystring1;

import java.util.Comparator;
import java.util.stream.Stream;

public class ReverseSentenceWordByWord {

	public static void main(String[] args) {
		
		String s="Concept Of the Day";
		
//		Stream.of(s.split(" ")).map(t->new StringBuilder(s).reverse()).forEach(System.out::println);;
		
		Stream.of(s.split(" ")).reduce((t, u) -> ""+t+u).ifPresent(System.out::println);
	}
}
