package concepts;

import java.util.Arrays;

public class CountingValleys {

	public static void main(String[] args) {
		String s = "UDDDUDUU";
		String[] spl = s.split("");
		System.out.println(Arrays.toString(spl));
		for (int i = 0; i < spl.length; i++) {

			if (!spl[i].equals(spl[i + 1])) {
				
				if (spl[i].equals("U")) {
					System.out.print("/" + "\\");
					i = i + 2;

				} else {
					System.out.print("\\" + "/");
					i = i + 2;

				}
				System.out.println();
				
			} else  {
				
				if (spl[i].equals("U")) {
					System.out.println("/");
				}else {
				System.out.println("\\");
				}
				
			} 

		}
	}
}
