package concepts;

public class CountingValleys {

	public static void main(String[] args) {
		String s = "UDDDUDUU";
		String[] spl = s.split(""); 
		System.out.println(spl);
		for (int i = 0; i < spl.length; i++) {
			if (spl[i].equals("U")) {
				System.out.print(spl[i]);
			}else {
				System.out.println(spl[i]);
			}
		}
	}
}
