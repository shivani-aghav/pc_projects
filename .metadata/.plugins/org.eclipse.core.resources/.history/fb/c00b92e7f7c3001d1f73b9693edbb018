package concepts;

import java.util.Arrays;

public class CountingValleys {

	public static void main(String[] args) {
		String s = "UDDDUDUU";
		String[] spl = s.split(""); 
		System.out.println(Arrays.toString(spl));
		for (int i = 0; i < spl.length; i++) {
			for (int j = i+1; j < spl.length; j++) {
				if (!spl[i].equals(spl[j])) {
					if (spl[i].equals("U")) {
						System.out.print("/"+"\\");
						i++;
					}else {
						System.out.print("\\"+"/");
						i++;
					}
				}
			}
		}
	}
}
