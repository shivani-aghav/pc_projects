package lee_code;

import java.util.Scanner;

public class Reverse {

	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		System.out.println("enter any number");
		int x = sc.nextInt();
		System.out.println(name(x));
		
	}
	
	public static int name(int x) {
		int tmp = x;
		int i = 0;
		int f=0;
		while (tmp > 0||tmp<0) {
			i = tmp % 10;
			tmp = tmp / 10;
			f=(f*10)+i;
		}
		return f;
		
		
	}
}
